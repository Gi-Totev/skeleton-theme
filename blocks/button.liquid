{% doc %}
  Renders a button block.

  @example
  {% content_for 'block', type: 'button', id: 'button' %}
{% enddoc %}

{%- liquid
  assign text = block.settings.text
  assign link = block.settings.link
-%}

{%- if link != blank and text != blank -%}
  <a href="{{- block.settings.link -}}" {{ block.shopify_attributes }}>
    {{ block.settings.text }}
  </a>
{%- endif -%}

{% stylesheet %}
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.button",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "t:labels.text",
      "default": "Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:labels.link",
      "default": "/"
    }
  ],
  "presets": [{ "name": "t:general.button" }]
}
{% endschema %}
